##!/bin/bash
log_dir=$OPENSHIFT_PYTHON_LOG_DIR
repo_dir=$OPENSHIFT_REPO_DIR
data_dir=$OPENSHIFT_DATA_DIR
phantom=$(ps -eaf | grep -v grep | grep phantomjs | grep -v $$)
if [ "$phantom" ]; then
echo "Phantomjs is already running";
else nohup $data_dir/phantomjs/bin/phantomjs --webdriver=$OPENSHIFT_PYTHON_IP:15005 &
 fi
# sleep 10
